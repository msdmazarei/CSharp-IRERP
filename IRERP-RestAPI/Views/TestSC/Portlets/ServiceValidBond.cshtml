@using IRERP_RestAPI.Bases.Extension.HTML;
@using IRERP_RestAPI.Bases.Extension.HTML.Controls;
@using IRERP_RestAPI.Bases.Extension.HTML.Controls.Types;
@using IRERP_RestAPI.Bases;
@{
    string Abi = "#0086D0";
    string portletlabelbackcolor = "#888888";

    var LastTransactionBondPortlet = new IRERP_SM_Portlets()
    {
        ID = "Transactionportlet",
        click = new IRERPControlTypes_StringMethods("Transaction_Click", true),

        border = "1px solid",
  
        members = new IRERPControlBase[]{
               new IRERP_SM_VLayout(){
                    height="100%",width="100%",
                    members= new IRERPControlBase[]{
                        new IRERP_SM_Img(){src="/Images/1368701679_start.png",imageType=IRERPControlTypes_imageType.center,height="*"},
                      
                        
                        new IRERP_SM_Label(){
                            contents = new  IRERPControlTypes_HTMLString( IRERPApplicationUtilities.GetHtmlString(ApplicationStatics.LoggedUser.LastACC, x => x.Credit, ApplicationStatics.T("PriceTransaction")))
                       
                            ,baseStyle="whitelabel",align=IRERPControlTypes_Alignment.center,
                            height="10",overflow=IRERPControlTypes_Overflow.visible,width="100%"
                        },
                         new IRERP_SM_Label(){height="5%"},
                           new IRERP_SM_Label(){
                            contents = new  IRERPControlTypes_HTMLString( IRERPApplicationUtilities.GetHtmlString(ApplicationStatics.LoggedUser.LastACC, x => x.TransDate, ApplicationStatics.T("dateTransaction")))
                            ,baseStyle="whitelabel",align=IRERPControlTypes_Alignment.center,
                            height="10",overflow=IRERPControlTypes_Overflow.visible,width="100%"
                        },
                           new IRERP_SM_Label(){height="20%"},
                        new IRERP_SM_Label(){
                            contents = new  IRERPControlTypes_HTMLString(IRERPApplicationUtilities.GetHtmlLabelString(this, @VirtualPath, "lastTransaction")),
                            backgroundColor=portletlabelbackcolor
                            ,baseStyle="portletlabel",align=IRERPControlTypes_Alignment.center,
                            height="10",overflow=IRERPControlTypes_Overflow.visible,width="100%"
                        },
               }
           }
        },

            showEdges = false,
            showHeader = false,
        backgroundColor = Abi
        
   };
    
    
    }
@Html.Raw(LastTransactionBondPortlet.ToStringAsMemberOfOther())