        members = new IRERPControlBase[]{
                new IRERP_SM_VLayout(){
                    height="100%",width="100%",
                    
                    members= new IRERPControlBase[]{
                        new IRERP_SM_Img(){src="/Images/1368882168_icontexto-aurora-folders-contacts.png",imageType=IRERPControlTypes_imageType.center,height="*"},
                        new IRERP_SM_Label(){
