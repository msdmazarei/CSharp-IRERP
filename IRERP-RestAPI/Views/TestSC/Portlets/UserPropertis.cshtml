                            new IRERP_SM_Label(){
                            contents = new  IRERPControlTypes_HTMLString(IRERPApplicationUtilities.GetHtmlString(ApplicationStatics.LoggedUser,x=>x.Email,ApplicationStatics.T("Email"))),
                            
                            baseStyle="whitelabel",align=IRERPControlTypes_Alignment.center,
                            height="10",overflow=IRERPControlTypes_Overflow.visible,width="100%"
                        },
                         new IRERP_SM_Label(){height="20%"},
                        new IRERP_SM_Label(){
                            contents = new  IRERPControlTypes_HTMLString(IRERPApplicationUtilities.GetHtmlLabelString(this,@VirtualPath, "UserProperty")),
                            backgroundColor=portletlabelbackcolor
                            ,baseStyle="portletlabel",align=IRERPControlTypes_Alignment.center,
                            height="10",overflow=IRERPControlTypes_Overflow.visible,width="100%"
