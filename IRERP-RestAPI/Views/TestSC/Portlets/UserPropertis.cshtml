@using IRERP_RestAPI.Bases;
@{
    string Abi = "#FE6F5E";

    string portletlabelbackcolor = "#888888";

    var UserPropertisPortlet = new IRERP_SM_Portlets()
    {
        ID = "UserPropertyportlet",
        click = new IRERPControlTypes_StringMethods("UserProperty_Click", true),
        border = "1px solid",
        members = new IRERPControlBase[]{
               new IRERP_SM_VLayout(){
                    height="100%",width="100%",
                    
                    members= new IRERPControlBase[]{
                        new IRERP_SM_Img(){src="/Images/1368701816_green-35.png",imageType=IRERPControlTypes_imageType.center,height="*"},
                       //  new IRERP_SM_Label(){height="5%"},
                        
                            new IRERP_SM_Label(){
                            contents = new  IRERPControlTypes_HTMLString(IRERPApplicationUtilities.GetHtmlString(ApplicationStatics.LoggedUser,x=>x.DisplayName,ApplicationStatics.T("DisplayName"))),
                            
                            baseStyle="whitelabel",align=IRERPControlTypes_Alignment.center,
                            height="10",overflow=IRERPControlTypes_Overflow.visible,width="100%"
