@using IRERP_RestAPI.Bases.Extension.HTML;
@using IRERP_RestAPI.Bases.Extension.HTML.Controls;
@using IRERP_RestAPI.Bases.Extension.HTML.Controls.Types;
@using IRERP_RestAPI.Bases;
@{
    string Banafsh = "#FE6F5E";
    string portletlabelbackcolor = "#888888";
    
    var DatePortlet = new IRERP_SM_Portlets()
    {
        border = "1px solid",
        members = new IRERPControlBase[]{
               new IRERP_SM_VLayout(){
                    height="100%",width="100%",
                    
                    members= new IRERPControlBase[]{
                        new IRERP_SM_Img(){src="/Images/calender.png",imageType=IRERPControlTypes_imageType.center,height="*"},
                       //  new IRERP_SM_Label(){height="5%"},
                        
                            new IRERP_SM_Label(){
                            contents = new  IRERPControlTypes_HTMLString((DateTime.Now).ToString()),
                            
                            baseStyle="whitelabel",align=IRERPControlTypes_Alignment.center,
                            height="10",overflow=IRERPControlTypes_Overflow.visible,width="100%"
                        },
                         new IRERP_SM_Label(){height="20%"},
                        new IRERP_SM_Label(){
                            contents = new  IRERPControlTypes_HTMLString(IRERPApplicationUtilities.GetHtmlLabelString(this, @VirtualPath, "Today")),
                            backgroundColor=portletlabelbackcolor
                            ,baseStyle="portletlabel",align=IRERPControlTypes_Alignment.center,
                            height="10",overflow=IRERPControlTypes_Overflow.visible,width="100%"
                        },
               }
           }
        },

        showEdges = false,
        showHeader = false,
        //bodyColor = ,
        backgroundColor = Banafsh
    };  
    }
@Html.Raw(DatePortlet.ToStringAsMemberOfOther())