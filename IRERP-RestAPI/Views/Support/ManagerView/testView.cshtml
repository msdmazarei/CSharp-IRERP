                        title="توضيحات مرتبط با مشترك ",

                        pane= new IRERP_SM_Label(){contents=new IRERPControlTypes_HTMLString("Detail5")}
                 }
                 
        }
    };

    var body = new IRERP_SM_VLayout() {members=new IRERPControlBase[]{button,button2,tabset}};
    CurPage.DisplayControls = body.ToStringAsMemberOfOther();
    }
@Html.Raw(CurPage)