            valueField = IRERPApplicationUtilities.GPN<IRERP_RestAPI.Models.MenuItem>(x => x.id),
            name = this.FN<DropDownListGroup>(x => x.menuItem)
        };
        dyForm.fields = new IRERP_SM_FormItem[]
